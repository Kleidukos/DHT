category:            DHT
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:     DHT
                     , DHT.Bucket
                     , DHT.Command
                     , DHT.Contact
                     , DHT.ID
                     , DHT.Message
                     , DHT.Node
                     , DHT.Node.Logging
                     , DHT.Node.Messaging
                     , DHT.Node.RoutingTable
                     , DHT.Node.ValueStore
                     , DHT.Routing
                     , DHT.Types
  -- other-modules:
  other-extensions:    OverloadedStrings
  build-depends:       base
                     , binary
                     , bytestring
                     , containers
                     , hashable
                     , network
                     , random
                     , time
                     , word8
  -- hs-source-dirs:
  default-language:    Haskell2010
