-- category:
build-type:          Simple
--extra-source-files:
cabal-version:       >=1.10

executable DHT-Example
  main-is:             Main.hs
  -- other-modules:
  other-extensions:    OverloadedStrings
  build-depends:       base,
                       bytestring,
                       string-conv,
                       DHT
  -- hs-source-dirs:
  default-language:    Haskell2010
